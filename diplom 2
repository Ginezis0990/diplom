    <script>
        // –ù–∞–≤–∏–≥–∞—Ü–∏—è –º–µ–∂–¥—É —Å–µ–∫—Ü–∏—è–º–∏
        document.querySelectorAll('.nav-btn').forEach(button => {
            button.addEventListener('click', function() {
                // –£–±–∏—Ä–∞–µ–º –∞–∫—Ç–∏–≤–Ω—ã–π –∫–ª–∞—Å—Å —É –≤—Å–µ—Ö –∫–Ω–æ–ø–æ–∫
                document.querySelectorAll('.nav-btn').forEach(btn => {
                    btn.classList.remove('active');
                });
                
                // –î–æ–±–∞–≤–ª—è–µ–º –∞–∫—Ç–∏–≤–Ω—ã–π –∫–ª–∞—Å—Å —Ç–µ–∫—É—â–µ–π –∫–Ω–æ–ø–∫–µ
                this.classList.add('active');
                
                // –°–∫—Ä—ã–≤–∞–µ–º –≤—Å–µ —Å–µ–∫—Ü–∏–∏
                document.querySelectorAll('.section').forEach(section => {
                    section.style.display = 'none';
                });
                
                // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –Ω—É–∂–Ω—É—é —Å–µ–∫—Ü–∏—é
                const sectionId = this.getAttribute('data-section') + '-section';
                document.getElementById(sectionId).style.display = 'block';
            });
        });

        // –ü–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏–µ —Ç–µ–º—ã
        const themeToggle = document.getElementById('themeToggle');
        themeToggle.addEventListener('click', function() {
            document.body.classList.toggle('dark-mode');
            const icon = this.querySelector('i');
            if (document.body.classList.contains('dark-mode')) {
                icon.className = 'fas fa-sun';
            } else {
                icon.className = 'fas fa-moon';
            }
        });

        // –û–±—Ä–∞—Ç–Ω—ã–π –æ—Ç—Å—á–µ—Ç –¥–æ –≤–µ—Å–Ω—ã 2026
        function updateCountdown() {
            const springDate = new Date('March 1, 2026 00:00:00').getTime();
            const now = new Date().getTime();
            const distance = springDate - now;
            
            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);
            
            document.getElementById('countdownTimer').innerHTML = 
                `${days}–¥ ${hours}—á ${minutes}–º ${seconds}—Å`;
        }

        setInterval(updateCountdown, 1000);
        updateCountdown();

        // –ü—Ä–æ–≥—Ä–µ—Å—Å –≥–æ–¥–∞
        function updateYearProgress() {
            const now = new Date();
            const start = new Date(now.getFullYear(), 0, 1);
            const end = new Date(now.getFullYear(), 11, 31);
            const total = end - start;
            const passed = now - start;
            const progress = (passed / total) * 100;
            
            document.getElementById('yearProgress').style.width = progress + '%';
            document.getElementById('progressPercent').textContent = Math.round(progress) + '%';
        }

        updateYearProgress();

        // –ú–æ–¥–∞–ª—å–Ω–æ–µ –æ–∫–Ω–æ –¥–ª—è —Å–µ–∑–æ–Ω–æ–≤
        const modal = document.getElementById('seasonModal');
        const closeModal = document.querySelector('.close-modal');

        document.querySelectorAll('.season-card').forEach(card => {
            card.addEventListener('click', function() {
                const season = this.getAttribute('data-season');
                const title = this.querySelector('.season-title').textContent;
                const months = this.querySelector('.season-months').textContent;
                const description = this.querySelector('.season-description').textContent;
                
                document.getElementById('modalTitle').textContent = title;
                document.getElementById('modalContent').innerHTML = `
                    <p><strong>–ü–µ—Ä–∏–æ–¥:</strong> ${months}</p>
                    <p><strong>–û–ø–∏—Å–∞–Ω–∏–µ:</strong> ${description}</p>
                    <h3>–û—Å–æ–±–µ–Ω–Ω–æ—Å—Ç–∏:</h3>
                    <ul>
                        <li>${getSeasonFeatures(season)}</li>
                        <li>–°—Ä–µ–¥–Ω—è—è —Ç–µ–º–ø–µ—Ä–∞—Ç—É—Ä–∞: ${getSeasonTemp(season)}</li>
                        <li>–ü—Ä–æ–¥–æ–ª–∂–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å: ${getSeasonDuration(season)}</li>
                    </ul>
                `;
                
                modal.style.display = 'flex';
            });
        });

        closeModal.addEventListener('click', function() {
            modal.style.display = 'none';
        });

        window.addEventListener('click', function(event) {
            if (event.target === modal) {
                modal.style.display = 'none';
            }
        });

        function getSeasonFeatures(season) {
            const features = {
                spring: '–¶–≤–µ—Ç–µ–Ω–∏–µ —Ä–∞—Å—Ç–µ–Ω–∏–π, –≤–æ–∑–≤—Ä–∞—â–µ–Ω–∏–µ –ø–µ—Ä–µ–ª–µ—Ç–Ω—ã—Ö –ø—Ç–∏—Ü',
                summer: '–î–ª–∏–Ω–Ω—ã–µ –¥–Ω–∏, –∂–∞—Ä–∫–∞—è –ø–æ–≥–æ–¥–∞, —Å–æ–∑—Ä–µ–≤–∞–Ω–∏–µ —Ñ—Ä—É–∫—Ç–æ–≤',
                autumn: '–õ–∏—Å—Ç–æ–ø–∞–¥, —Å–±–æ—Ä —É—Ä–æ–∂–∞—è, –ø–µ—Ä–µ–ª–µ—Ç –ø—Ç–∏—Ü –Ω–∞ —é–≥',
                winter: '–°–Ω–µ–≥, –∫–æ—Ä–æ—Ç–∫–∏–µ –¥–Ω–∏, –∑–∏–º–Ω—è—è —Å–ø—è—á–∫–∞ –∂–∏–≤–æ—Ç–Ω—ã—Ö'
            };
            return features[season] || '–ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ —Å–µ–∑–æ–Ω–µ';
        }

        function getSeasonTemp(season) {
            const temps = {
                spring: '+5¬∞C –¥–æ +15¬∞C',
                summer: '+18¬∞C –¥–æ +25¬∞C',
                autumn: '+5¬∞C –¥–æ +12¬∞C',
                winter: '-10¬∞C –¥–æ 0¬∞C'
            };
            return temps[season] || '–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–æ';
        }

        function getSeasonDuration(season) {
            const durations = {
                spring: '92 –¥–Ω—è',
                summer: '93 –¥–Ω—è',
                autumn: '90 –¥–Ω–µ–π',
                winter: '90 –¥–Ω–µ–π'
            };
            return durations[season] || '–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–æ';
        }

        // –ê–Ω–∏–º–∞—Ü–∏—è –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.animated').forEach((element, index) => {
                element.style.animationDelay = (index * 0.2) + 's';
            });
        });

        // –°–ª—É—á–∞–π–Ω—ã–µ —Ñ–∞–∫—Ç—ã –ø—Ä–∏ –Ω–∞–≤–µ–¥–µ–Ω–∏–∏
        document.querySelectorAll('.season-card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                const facts = [
                    "–ó–Ω–∞–µ—Ç–µ –ª–∏ –≤—ã? –í —ç—Ç–æ–º —Å–µ–∑–æ–Ω–µ –ø—Ä–æ–∏—Å—Ö–æ–¥–∏—Ç –º–Ω–æ–≥–æ –∏–Ω—Ç–µ—Ä–µ—Å–Ω–æ–≥–æ!",
                    "–ò–Ω—Ç–µ—Ä–µ—Å–Ω—ã–π —Ñ–∞–∫—Ç: –ø—Ä–æ–¥–æ–ª–∂–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å —Å–µ–∑–æ–Ω–∞ –º–æ–∂–µ—Ç –º–µ–Ω—è—Ç—å—Å—è!",
                    "–ó–∞–±–∞–≤–Ω–æ: –∂–∏–≤–æ—Ç–Ω—ã–µ –ø–æ-—Ä–∞–∑–Ω–æ–º—É –∞–¥–∞–ø—Ç–∏—Ä—É—é—Ç—Å—è –∫ —ç—Ç–æ–º—É –≤—Ä–µ–º–µ–Ω–∏ –≥–æ–¥–∞!",
                    "–ó–Ω–∞–µ—Ç–µ? –ü–æ–≥–æ–¥–∞ –≤ —ç—Ç–æ–º —Å–µ–∑–æ–Ω–µ –æ—á–µ–Ω—å –ø–µ—Ä–µ–º–µ–Ω—á–∏–≤–∞!"
                ];
                const randomFact = facts[Math.floor(Math.random() * facts.length)];
                
                // –í—Ä–µ–º–µ–Ω–Ω–∞—è –ø–æ–¥—Å–∫–∞–∑–∫–∞
                const tooltip = document.createElement('div');
                tooltip.className = 'fact-tooltip';
                tooltip.textContent = randomFact;
                tooltip.style.cssText = `
                    position: absolute;
                    background: rgba(0,0,0,0.8);
                    color: white;
                    padding: 10px;
                    border-radius: 5px;
                    z-index: 1000;
                    max-width: 200px;
                    font-size: 0.8em;
                `;
                
                this.appendChild(tooltip);
                
                setTimeout(() => {
                    if (this.contains(tooltip)) {
                        this.removeChild(tooltip);
                    }
                }, 3000);
            });
        });
    </script>
